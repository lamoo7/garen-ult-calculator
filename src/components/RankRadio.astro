---
import { Image } from "astro:assets";

export interface Props {
	id: string;
	name: string;
	value: string;
	label: string;
	image: ImageMetadata;
	checked?: boolean;
}

const { id, name, value, label, image, checked = false } = Astro.props;
---

<input type="radio" {id} {name} {value} {checked} />
<label for={id} class="ult">
	<span class="rank-number">{value}</span>
	{label} <Image src={image} alt={`rank ${value}`} width={65} height={65} />
</label>

<style>
	input[type="radio"] {
		display: none;
	}

	.ult {
		display: flex;
		flex-direction: column;
		align-items: center;
		filter: grayscale(1);
		margin-inline: var(--space-xs);
		transition: filter var(--transition), opacity var(--transition);
		cursor: pointer;
		color: rgba(255, 255, 255, 0.9);
		opacity: 0.75;
		position: relative;
	}

	.ult :global(img) {
		width: 45px;
		height: 45px;
		aspect-ratio: 1;
		border: 3px solid var(--color-primary);
		border-radius: var(--border-radius);
		transition: border-width var(--transition), border-color 0.2s ease;
		position: relative;
	}

	.rank-number {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		font-size: clamp(1.25rem, 4vw, 1.75rem);
		font-weight: 900;
		color: white;
		text-shadow: 
			0 2px 4px rgba(0, 0, 0, 0.9),
			0 0 8px rgba(0, 0, 0, 0.6);
		z-index: 1;
		pointer-events: none;
		line-height: 1;
	}

	input[type="radio"]:checked + .ult {
		filter: grayscale(0);
		opacity: 1;
	}

	
	@media screen and (min-width: 768px) {
		.ult :global(img) {
			width: 65px;
			height: 65px;
			border-width: 4px;
		}
	}
</style>
