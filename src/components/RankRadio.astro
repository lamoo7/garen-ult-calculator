---
import { Image } from "astro:assets";

export interface Props {
	id: string;
	name: string;
	value: string;
	label: string;
	image: ImageMetadata;
	checked?: boolean;
}

const { id, name, value, label, image, checked = false } = Astro.props;
---

<input type="radio" {id} {name} {value} {checked} />
<label for={id} class="ult">
	{label} <Image src={image} alt={`rank ${value}`} width={65} height={65} />
</label>

<style>
	input[type="radio"] {
		display: none;
	}

	.ult {
		display: flex;
		flex-direction: column;
		align-items: center;
		filter: grayscale(1);
		margin-inline: var(--space-xs);
		transition: filter var(--transition), opacity var(--transition);
		cursor: pointer;
		color: rgba(255, 255, 255, 0.9);
		opacity: 0.75;
	}

	.ult :global(img) {
		width: 65px;
		aspect-ratio: 1;
		border: 4px solid var(--color-primary);
		border-radius: var(--border-radius);
		transition: border-width var(--transition), border-color 0.2s ease;
	}

	input[type="radio"]:checked + .ult {
		filter: grayscale(0);
		opacity: 1;
	}
</style>
